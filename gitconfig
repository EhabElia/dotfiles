[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[color "branch"]
  current = green
  remote = yellow

[core]
  pager = less -FRSX
	editor = '/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl' -n -w

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  rb = rebase
  ri = rebase -i
  rc = rebase --continue
  amend = commit --amend
  ap = add -p
  lg = log -p
  sb = show-branch
  lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  la = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
  lh = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Creset' --abbrev-commit --date=relative

  m = checkout master

  # Removes a file from the index
  unstage = reset HEAD --

[help]
  autocorrect = 1

[push]
	default = simple

[branch "master"]
  mergeoptions = --no-edit
[user]
	email = ehab.elia@gmail.com
	name = ehab elia
